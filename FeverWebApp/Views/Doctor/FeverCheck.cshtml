@{
    ViewBag.Title = "Fever Check";
}

<h2>Fever Check</h2>

<form asp-action="CheckFever" method="post">
    <label for="temperature">Temperature:</label>
    <input type="number" step="0.1" name="temperature" required />

    <label for="scale">Scale:</label>
    <input type="radio" name="scale" value="Celsius" checked /> Celsius
    <input type="radio" name="scale" value="Fahrenheit" /> Fahrenheit

    <button type="submit">Check</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
